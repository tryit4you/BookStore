@model IEnumerable<P_Comment>


@if (Model.Count() == 0)
{
    <div class="alert alert-info">
        <p>Hiện chưa có đánh giá nào! Hãy nêu suy nghĩ của bạn về ebook này.</p>
    </div>
}
else
{
    @foreach (var comment in Model)
    {
        <li>
            <div class="row">
                <div class="col-sm-2">
                    <div class="thumbnail">
                        <img class="img-circle user-photo" src="@comment.UrlAvatar">
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>@comment.UserName</strong> <span class="text-muted">
                                @{
                                    var createdDate = comment.CreatedDate;
                                    DateTime today = new DateTime();
                                    today = DateTime.Now;
                                    var timeCreate = TimeSpan.FromDays(today.Subtract(comment.CreatedDate).Ticks);

                            }@timeCreate
                        </span>
                    </div>
                    <div class="panel-body">
                        @comment.Message
                    </div><!-- /panel-body -->
                </div><!-- /panel panel-default -->
            </div>
        </div>
        <div class="clearfix"></div>
    </li>
}



}
