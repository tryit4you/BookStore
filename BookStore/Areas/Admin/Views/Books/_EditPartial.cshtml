<div class="header">
    <h3 id="roomHeader">Chỉnh sửa ebook</h3>
</div>

<div class="body">
    <form role="form" id="frmEditData">
        <input type="hidden" id="EditId">
        <div class="form-group">
            <div class="form-line">
                <label for="Name">Tên ebook</label>
                <input type="text" class="form-control" name="EditName" id="EditName" required>
            </div>
        </div>
      
        <div class="form-group">
            <div class="form-inline">
                <input type="file" accept="png/*" name="Image" value="Chọn hình" class="btn btn-primary item-img" />
            </div>
            <div class="form-inline">
                <input type="text" name="EditImage" value="" id="urlImg" style="display:none" />
                <img src="" id="EditThumbnail" class="img" style="margin-top:20px" width="100" />
            </div>
        </div>
        <div class="form-group">
            <label>Danh mục </label>
            <br />
            <select name="EditCategory" style="border-bottom: 1px solid #dddddd;" id="EditCategory" class="js-example-basic-single" required>
                <option value="">Chọn Danh mục</option>
            </select>
        </div>
        <div class="form-group">
            <label>Thể loại</label>
            <br />
            <select name="EditBookTypeId" style="border-bottom: 1px solid #dddddd;" id="EditBookType" class="js-example-basic-single">
                <option value="">Chọn thể loại</option>
            </select>
        </div>

     
        <div class="form-group">
            <div class="form-line">
                <label for="Description">Mô tả </label>
                <textarea name="EditLongDescription" rows="10" id="EditContent"></textarea>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-line">
                    <label>Ngôn ngữ</label><br />
                    <select id="EditLanguage" class="Language">
                        <option value="Tiếng Việt">Tiếng Việt</option>
                        <option value="Tiếng Anh">Tiếng Anh</option>
                        <option value="Tiếng Trung">Tiếng trung</option>
                        <option value="Tiếng Nhật">Tiếng Nhật</option>
                    </select>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-line">
                    <label>Số trang</label>
                    <input type="number"  min="1" max="10000"  class="form-control" name="PageNumber" id="EditPageNumber" required>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-line">
                    <label>Dung lượng</label>
                    <input type="number"  min="0.1" max="1000"  class="form-control" name="Capacity" id="EditCapacity" required>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-line">
                    <label>Tác giả</label>
                    <input type="text" class="form-control" name="Authors" id="EditAuthors" required>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-line">
                    <label>Đơn vị phát hành</label>
                    <input type="text" class="form-control" name="PublishBy" id="EditPublishBy">

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-line">
                    <label>Năm phát hành</label>
                    <input type="number" min="1980" max="2090" class="form-control" name="DateRelease" id="EditDateRelease" required>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-line">
                    <label>Tham khảo</label>
                    <input type="text" class="form-control" name="RefenceText" id="EditReferenceText">

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-line">
                    <label>Link tham khảo</label>
                    <input type="url" class="form-control" name="RefenceLink" id="EditReferenceLink">

                </div>
            </div>
        </div><div class="breadcrumb">
    <h5 class="text-info">Đường dẫn tải ebook</h5>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <div class="form-line">
                    <label>Định dạng <b>.PDF</b></label>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <input type="hidden" id="EditLinkId" />
            <div class="form-group">
                <div class="form-line">
                    <input type="url" class="form-control" placeholder="Link .Pdf" name="LinkPdf" id="EditLinkPdf">

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <div class="form-line">
                    <label>Định dạng <b>.EPUB</b></label>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <div class="form-line">
                    <input type="url" class="form-control" name="LinkEpub" placeholder="Link .Epub" id="EditLinkEpub">

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <div class="form-line">
                    <label>Định dạng <b>.MOBI</b></label>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <div class="form-line">
                    <input type="url" class="form-control" placeholder="Link .Mobi" name="LinkMobi" id="EditLinkMobi">

                </div>
            </div>
        </div>
    </div>
</div>
        <br />
        <div class="form-group">
            <div class="demo-switch-title">Trạng thái</div>
            <div class="switch">
                <label><input type="checkbox" id="EditStatus" checked><span class="lever switch-col-lime"></span></label>
            </div>
        </div>
    </form>
    <br />
    <span> Các trường được đánh dấu  được yêu cầu nhập</span>
    <br />
    <div class="form-group">

        <button type="button" class="btn btn-secondary waves-effect" id="btnCancle" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary waves-effect" id="SaveEdit">Lưu thay đổi</button>
    </div>
</div>