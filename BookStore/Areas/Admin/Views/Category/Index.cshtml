@{
    ViewBag.Title = "Quản trị danh mục";
}

@using BookStore.Data.Models

<div class="alert alert-info align-center">
    Danh mục
</div>

<div class="clearfix">
    <div class="card ">
        <div class="cart-in">
            <ul class="nav nav-tabs tab-col-teal" role="tablist">
                <li role="presentation" class="active">
                    <a href="#home" data-toggle="tab">
                        <i class="fa fa-table col-blue"></i> Danh mục
                    </a>
                </li>
                <li role="presentation">
                    <a href="#create" data-toggle="tab">
                        <i class="fa fa-plus-circle col-green"></i> Tạo mới
                    </a>
                </li>
                <li role="presentation">
                    <a href="#Edit" data-toggle="tab">
                        <i class="fa fa-edit col-orange"></i> Chỉnh sửa
                    </a>
                </li>
            </ul>
            <div class="body">
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="home">

                        <div class="form-content">
                            <div class="form-group form-inline pull-left">
                                <div class="form-line">
                                    <span class="clear-search"><i class="fa fa-times-circle"></i></span>
                                    <input type="text" name="search" value="" placeholder="Tìm kiếm..." class="form-control txtSearch">

                                    <button class="btn bg-blue btn-Search"><i class="fa fa-search"></i></button>
                                    <button class="btn btn-danger" id="btn-Deletemulti"><i class="fa fa-trash"></i>Xóa</button>
                                </div>
                                <hr />
                            </div>

                        </div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width:10%"><label><input type="checkbox" name="selectAll" value="" id="selectAll" />Chọn tất cả</label></th>
                                    <th>Tên </th>
                                    <th>Ngày tạo</th>
                                    <th class="status">Trạng thái</th>
                                    <th class="action">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="tbData"></tbody>
                        </table>

                        <div class="col-sm-5">
                            <div class="dataTables_info" id="DataTables_Table_0_info" role="status" aria-live="polite">
                                <p>Trang <mark><span id="currentpage"></span></mark> tổng số <mark><span id="totalpage"></span></mark> trang</p>
                            </div>
                        </div>

                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                                <div class="pagination" id="pagination">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane fade in " id="create">
                        @await  Html.PartialAsync("_CreatePartial")
                    </div>
                    <div role="tabpanel" class="tab-pane fade in " id="Edit">
                      @await  Html.PartialAsync("_EditPartial")
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<script id="data-template" type="x-tmpl-mustache">
    <tr class="row_item" data-id="{{ID}}">
        <td>
            <input type="checkbox" id="select-{{ID}}" name="selectAll" data-id="{{ID}}" class="chk-col-red selectedItem" />
            <label for="select-{{ID}}"></label>
        </td>
        <td>{{Name}}</td>
        <td>{{CreatedDate}}</td>

        <td class="status">{{{Status}}}</td>

        <td class="action">
            <a class="btn-delete" href="#" data-toggle="tool-tip" data-placement="top" data-original-title="Xóa hồ sơ" data-id="{{ID}}">
                <i class="fa fa-trash col-pink"></i>Xóa
            </a>

            <a href="#Edit" data-toggle="tab" class=" btn-edit" data-id="{{ID}}">
                <i class="fa fa-edit col-yellow"></i>Sửa
            </a>
        </td>
    </tr>
</script>
@section jsFooter{
    <script src="~/Admin/dist/js/controller/categoryController.min.js"></script>
}
