<div class="header">
    <h3 id="roomHeader">Chỉnh sửa ebook</h3>
</div>

<div class="body">
    <form role="form" id="frmEditData">
        <input type="hidden" id="EditId">
        <div class="form-group">
            <div class="form-line">
                <label for="Name">Tên Khóa Học</label>
                <input type="text" class="form-control" name="EditName" id="EditName" required>
            </div>
        </div>

        <div class="form-group">
            <div class="form-inline">
                <input type="file" accept="png/*" name="Image" value="Chọn hình" class="btn btn-primary item-img" />
            </div>
            <div class="form-inline">
                <input type="text" name="EditImage" value="" id="urlImg" style="display:none" />
                <img src="" id="EditThumbnail" class="img" style="margin-top:20px" width="100" />
            </div>
        </div>
        <div class="form-group">
            <label>Danh mục </label>
            <br />
            <select name="EditCourseCategory" style="border-bottom: 1px solid #dddddd;" id="EditCourseCategory" class="js-example-basic-single" required>
                <option value="">Chọn Danh mục</option>
            </select>
        </div>

        <div class="form-group">
            <div class="form-line">
                <label for="Description">Mô tả </label>
                <textarea name="EditDescription" rows="10" id="EditContent"></textarea>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <div class="form-line">
                    <label>Tác giả</label>
                    <input type="text" class="form-control" name="Authors" id="EditAuthors" required>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-line">
                    <label>Tham khảo</label>
                    <input type="url" class="form-control" name="RefenceText" id="EditReferenceText">

                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <div class="form-line">
                    <label>Đường link chia sẻ</label>
                    <input type="url" class="form-control" name="EditShareUrl" id="sharedUrl">

                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="demo-switch-title">Trạng thái</div>
            <div class="switch">
                <label><input type="checkbox" id="EditStatus" checked><span class="lever switch-col-lime"></span></label>
            </div>
        </div>
    </form>
    <br />
    <div class="form-group">

        <button type="button" class="btn btn-secondary waves-effect" id="btnCancle" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary waves-effect" id="SaveEdit">Lưu thay đổi</button>
    </div>
</div>